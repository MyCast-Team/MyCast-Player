<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="playerContainer" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <HBox fx:id="controlBar" alignment="CENTER">
            <Button fx:id="previous">
                <graphic>
                    <ImageView>
                        <Image url="@../img/previous.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="stop">
                <graphic>
                    <ImageView>
                        <Image url="@../img/stop.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="play">
                <graphic>
                    <ImageView>
                        <Image url="@../img/play.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="next">
                <graphic>
                    <ImageView>
                        <Image url="@../img/next.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Slider fx:id="timeSlider" min="0" max="100" minWidth="50" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Label fx:id="timeLabel" prefWidth="130" minWidth="50"/>
            <Button fx:id="repeat">
                <graphic>
                    <ImageView>
                        <Image url="@../img/repeat.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="resize">
                <graphic>
                    <ImageView>
                        <Image url="@../img/resize.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>